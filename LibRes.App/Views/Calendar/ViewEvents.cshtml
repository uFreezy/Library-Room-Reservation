@model string

<style>
    .modal-backdrop {
        /* bug fix - no overlay */
        display: none !important;
    }
</style>
<div id="containers"></div>
<div id="calendar"></div>
<div id="load_cont"></div>
<script>


    $(document).ready(function() {
        var data = @Html.Raw(Model);

        console.log(data);

        $('#calendar').fullCalendar({
            header: {
                left: 'prev,next today',
                center: 'title',
                right: 'month,basicWeek,basicDay'
            },
            eventRender: function(event, element) {
                element.click(function() {
                    $.ajax({
                        url: '@Url.Action("ViewEventPartial")',
                        beforeSend: function() {
                            $('#load_cont').append(
                                '<div class="modal fade bd-example-modal-lg" id="load" data-backdrop="static" data-keyboard="false" tabindex="-1"><div class="modal-dialog modal-sm"><div class="modal-content" style="width: 48px"><span class="fa fa-spinner fa-spin fa-3x"></span></div> </div> </div>');
                            $('#load').modal("show");
                        },
                        type: 'GET',
                        cache: false,
                        data: { eventId: event.id },
                        success: function(result) {

                            $('#containers').html(result);
                            $('#eventInfo').modal();
                        },
                        complete: function() {
                            $('#load_cont').html('');
                            $('.modal-backdrop.fade').remove();
                        }
                    });


                });
            },
            defaultDate: '@DateTime.Now.ToString("yyyy-MM-dd")',
            navLinks: true, // can click day/week names to navigate views
            editable: false,
            eventLimit: true, // allow "more" link when too many events
            events: data
        });

    });

</script>