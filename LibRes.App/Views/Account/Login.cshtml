@model LibRes.App.Models.Account.LoginModel
@{
    ViewBag.Title = "Login";
}
@using (Html.BeginForm("Login", "Account", FormMethod.Post, new {@class = "form-horizontal", role = "form"}))
{
    @Html.AntiForgeryToken()
   
    <div class="card">
        <div class="card-body">
            <div class="text-center">
                <img src="~/img/nbu_logo.jpg" class="img-fluid nbu-logo" alt="">
            </div>
            <div class="row">
                @Html.ValidationSummary("", new {@class = "text-danger"})
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Email, new {@class = "form-check-label"})
                        @Html.TextBoxFor(m => m.Email, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div class="form-group">
                        @Html.LabelFor(m => m.Password, new {@class = "form-check-label"})

                        @Html.PasswordFor(m => m.Password, new {@class = "form-control"})
                    </div>
                </div>
            </div>
            <p>
                @Html.ActionLink("Don't have an account? Register now!", "Register")
            </p>
            <p>
                @Html.ActionLink("Forgot your password?", "ForgotPassword")
            </p>
            <div class="card-footer">
                <input type="submit" class="btn btn-default" value="Login"/>
            </div>
        </div>
    </div>                                                                                                          
}